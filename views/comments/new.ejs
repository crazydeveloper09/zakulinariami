<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-12">
            <div class="card">
                <div class="card-title text-center title_new" id="name">
                    <br>
                    Dodaj komentarz do przepisu <%= recipe.title %>
                </div>
                <div class="card-body">
                        <form action="/recipes/<%= recipe.link %>/comments" method="post">
                            <% if(!currentUser){ %>
                                <p class="description_new">Podaj sw√≥j nick</p>
                                <input type="text" name="nickname" class="form-control" placeholder="Nick" required>
                                <br>
                            <% } %>
                            
                            <p class="description_new">Tekst komentarza</p>
                            <textarea name="text" id="description" class="form-control" placeholder="Tekst komentarza" required></textarea>
                            <br>
                            <input type="submit" value="Dodaj nowy komentarz" class="btn btn-outline-dark">
                        </form>
                </div>
            </div>
            
        </div>
    </div>
</div>
