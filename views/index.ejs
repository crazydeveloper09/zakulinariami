<%- include("partials/header") %>
<br>
<br>
<br>
<div class="container">
    
    
 
   
    <div class="row">
        <div class="col-lg-12">
            <h1 class="headerp text-center">Ostatnie 5 przepisów</h1>
            <% if(error && error.length > 0){ %>
                <div class="alert alert-danger" role="alert">
                    <%= error %>
                </div>
            <% } %>
        </div>
    </div>

    <% if(recipes.length===0){ %>
        <div class="row justify-content-center">
            <div class="col-lg-6 col-md-12">
                <div class="alert alert-secondary text-center" role="alert">
                    Nie mamy jeszcze przepisów na stronie
                </div>
            </div>
        </div>
    <% } else { %>
        <div class="row">
                <% if(recipes.length > 5){ %>
                    <% for(let i=recipes.length-1; i>recipes.length - 6;i--){ %>
                        <div class="col-lg-4 col-md-12">
                            <div class="card">
                                <img src="<%= recipes[i].profile %>" alt="" class="card-img-top">
                                <br>
                                <div class="card-title text-center title"><%= recipes[i].title %></div>
                                <div class="card-body">
                                    <p class="description"><%= recipes[i].description.substring(0,300) %></p>
                                    <label>
                                            <i class="far fa-clock"></i>
                                            <span style="margin-right:5px">
                                                <% if(recipes[i].hours === 0){ %>
                                                    <%= `${recipes[i].minutes}min` %>
                                                <% } else { %>
                                                    <%= `${recipes[i].hours}h ${recipes[i].minutes}min` %>
                                                <% } %>
                                                
                                            </span>
                                            <i class="fas fa-utensils"></i>
                                            <span style="margin-right:5px"><%= recipes[i].plates %></span>
                                            <i class="fas fa-comments"></i>
                                            <span><%= recipes[i].comments.length %></span>
                                    </label>
                                    <br>
                                   
                                    <a href="/recipes/<%= recipes[i].link %>" class="btn btn-outline-dark">Zobacz składniki</a>
                                
                                   
                                
                            </div>
                        </div>
                    <% } %>
                <% } else { %>
                    <% for(let i=recipes.length-1; i>=0;i--){ %>
                        <div class="col-lg-4 col-md-12">
                            <div class="card">
                                <img src="<%= recipes[i].profile %>" alt="" class="card-img-top">
                                <br>
                                <div class="card-title text-center title"><%= recipes[i].title %></div>
                                <div class="card-body">
                                    <p class="description"><%= recipes[i].description.substring(0,300) %></p>
                                    <label>
                                            <i class="far fa-clock"></i>
                                            <span style="margin-right:5px">
                                                <% if(recipes[i].hours === 0){ %>
                                                    <%= `${recipes[i].minutes}min` %>
                                                <% } else { %>
                                                    <%= `${recipes[i].hours}h ${recipes[i].minutes}min` %>
                                                <% } %>
                                                
                                            </span>
                                            <i class="fas fa-utensils"></i>
                                            <span style="margin-right:5px"><%= recipes[i].plates %></span>
                                            <i class="fas fa-comments"></i>
                                            <span><%= recipes[i].comments.length %></span>
                                    </label>
                                    <br>
                                   
                                    <a href="/recipes/<%= recipes[i].link %>" class="btn btn-outline-dark">Zobacz składniki</a>
                                   
                                   
                                </div>
                                
                            </div>
                        </div>
                    <% } %>
                <% } %>
        </div>
       
    <% } %>
    
</div>
<%- include("partials/footer") %>