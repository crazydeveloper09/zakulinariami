<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-12">
            <div class="card">
                <div class="card-title text-center title_new" id="name">
                    <br>
                    Edytuj krok do przygotowania <%= recipe.title %>
                </div>
                <div class="card-body">
                        <form action="/recipes/<%= recipe._id %>/preparations/<%= preparation._id %>?_method=PUT" method="post">
                            
                            <p class="description_new">Edytuj opis kroku przygotowania</p>
                            <textarea name="preparation[text]" id="description" class="form-control" placeholder="Krok przygotowania"><%= preparation.text %></textarea>
                            <br>
                           
                            <input type="submit" value="Edytuj krok przygotowania" class="btn btn-outline-dark">
                        </form>
                </div>
            </div>
            
        </div>
    </div>
</div>
<%- include("../partials/footer") %>