<%- include("../partials/header") %>
<br>
<br>
<br>
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-6 col-md-12">
                    <div class="card">
                        <div class="card-title text-center title_new" id="name">
                            <br>
                            Edytuj zdjęcie główne przepisu <%= recipe.title %>
                        </div>
                        <div class="card-body">
                                <form action="/recipes/<%= recipe._id %>/edit/profile" method="post" enctype="multipart/form-data">
                                    
                                    <p class="description_new">
                                        Wybierz zdjęcie
                                        <button type="button" style="background: transparent;border: none;" data-bs-toggle="popover" data-bs-placement="right" data-bs-content="Najlepiej będzie, jeśli będziesz używać poziomego zdjęcia">
                                            <i class="fas fa-info-circle" style="color: #212529;"></i>
                                        </button>
                                    </p>
                                    <input class="form-control" type="file" name="profile" accept="image/*" required>
                                    
                                    <input type="submit" value="Edytuj zdjęcie główne" class="btn btn-outline-dark">
                                </form>
                        </div>
                    </div>
                    
                </div>
            </div>
        </div>
<%- include("../partials/footer") %>