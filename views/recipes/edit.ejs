<% include ../partials/header %>
<br>
<br>
<br>
<div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-6 col-md-12">
                <div class="card">
                    <div class="card-title text-center title_new" id="name">
                        <br> 
                    
                        Edytuj <%= recipe.title %>
                    </div>
                    <div class="card-body">
                        <form action="/recipes/<%= recipe._id %>?_method=PUT" method="post">
                            <p class="description_new">Edytuj tytuł</p>
                            <input type="text" name="recipe[title]" class="form-control" value="<%= recipe.title %>" placeholder="Tytuł przepisu">
                            <br>
                            <p class="description_new">Edytuj ilość godzin potrzebnych do przygotowania</p>
                            <input type="number" name="recipe[hours]" class="form-control" value="<%= recipe.hours %>" placeholder="Godziny">
                            <br>
                            <p class="description_new">Edytuj ilość minut potrzebnych do przygotowania</p>
                            <input type="number" name="recipe[minutes]" class="form-control" value="<%= recipe.minutes %>" placeholder="Minuty">
                            <br>
                            <p class="description_new">Edytuj ilość porcji</p>
                            <input type="number" name="recipe[plates]" class="form-control" value="<%= recipe.plates %>" placeholder="Porcje">
                            <br>
                            <p class="description_new">Edytuj opis</p>
                            <textarea name="recipe[description]" class="form-control" id="description" placeholder="Opis przepisu"><%= recipe.description %></textarea>
                            <br>
                            <input type="submit" value="Edytuj przepis" class="btn btn-outline-dark">
                        </form>
                    </div>
                </div>
               
            </div>
        </div>
    </div>
<% include ../partials/footer %>