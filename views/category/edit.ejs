<%- include("../partials/header") %>

<div class="container customContainer">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-12">
            <div class="card">
                <div class="card-title text-center title_new" id="name">
                    <br>
                    Edytuj kategorię <%= category.name %>
                </div>
                <div class="card-body">
                        <form action="/recipes/category/<%= category._id %>?_method=PUT" method="post">
                            <p class="description_new">Tytuł kategorii</p>
                            <input type="text" name="category[name]" value="<%= category.name %>" class="form-control" placeholder="Tytuł kategorii" required>
                            <br>
                            
                            <input type="submit" value="Edytuj kategorię" class="btn btn-outline-dark">
                        </form>
                </div>
            </div>
            
        </div>
    </div>
</div>
<%- include("../partials/footer") %>